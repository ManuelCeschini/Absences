<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titel"
        android:textSize="18dp"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datum_anfang"
        android:textSize="12dp"
        android:layout_toRightOf="@id/titel"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datum_ende"
        android:textSize="12dp"
        android:layout_below="@id/datum_anfang"
        android:layout_toRightOf="@+id/datum_anfang"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/begruendung"
        android:textSize="12dp"
        android:layout_below="@id/titel"
        android:layout_margin="8dp"
        />

</RelativeLayout>