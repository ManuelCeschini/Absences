<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liquidsoftware.absences.Anzeige" >


    <TextView
        android:id="@+id/AnzeigeTitel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="18dp"
        android:layout_margin="4dp"
        android:background="#E0F8F7"
        />

    <TextView
        android:id="@+id/AnzeigeDatumStart"
        android:layout_below="@id/AnzeigeTitel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="18dp"
        android:layout_margin="4dp"
        android:background="#E0F8F7"
        />

    <TextView
        android:id="@+id/AnzeigeDatumEnde"
        android:layout_below="@id/AnzeigeDatumStart"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="18dp"
        android:layout_margin="4dp"
        android:background="#E0F8F7"
        />

    <TextView
        android:id="@+id/AnzeigeBegruendung"
        android:layout_below="@id/AnzeigeDatumEnde"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="18dp"
        android:layout_margin="4dp"
        android:background="#E0F8F7"
        />
</RelativeLayout>
