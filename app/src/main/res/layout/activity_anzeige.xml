<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.liquidsoftware.absences.Anzeige"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_refresh_layout_anzeige">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ladekreis_anzeige"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/relative_layout_anzeige">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/AnzeigeTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/textTitle"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/textDatumAnfang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_below="@id/AnzeigeTitel"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/AnzeigeDatumStart"
                android:layout_below="@id/textDatumAnfang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textDatumEnde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_below="@id/AnzeigeDatumStart"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/AnzeigeDatumEnde"
                android:layout_below="@id/textDatumEnde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="25dp"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/textBegruendung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AnzeigeDatumEnde"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/AnzeigeBegruendung"
                android:layout_below="@id/textBegruendung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/deleteAnzeige"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/AnzeigeBegruendung"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Delete"
                android:textStyle="bold"
                android:background="#E81F3F"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>